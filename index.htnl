                closeModal('add-plan-modal');
                resetPlanForm();
                loadInvestments();
            } catch (e) {
                showToast('Error: ' + e.message, 'error');
            }
        }

        function editPlan(id) {
            const plan = plansData.find(p => p.id === id);
            if (!plan) return;
            
            document.getElementById('plan-edit-id').value = id;
            document.getElementById('plan-name').value = plan.name || '';
            document.getElementById('plan-return').value = plan.return || '';
            document.getElementById('plan-duration').value = plan.duration || '';
            document.getElementById('plan-min').value = plan.min || '';
            document.getElementById('plan-risk').value = plan.risk || 'low';
            document.getElementById('plan-desc').value = plan.description || '';
            document.getElementById('plan-image-url').value = plan.image || '';
            
            if (plan.image) {
                document.getElementById('plan-image-preview').src = plan.image;
                document.getElementById('plan-image-preview').style.display = 'block';
                document.getElementById('plan-file-upload').classList.add('has-file');
            }
            
            document.getElementById('plan-modal-title').textContent = 'Edit Investment Plan';
            document.getElementById('plan-save-btn').textContent = 'Update Plan';
            openModal('add-plan-modal');
        }

        async function togglePlan(id, hidden) {
            try {
                await db.collection('investmentPlans').doc(id).update({ hidden: hidden });
                showToast(hidden ? 'Plan hidden' : 'Plan visible');
                loadInvestments();
            } catch (e) {
                showToast('Error: ' + e.message, 'error');
            }
        }

        async function deletePlan(id) {
            if (!confirm('Are you sure you want to delete this plan? This action cannot be undone.')) return;
            
            try {
                await db.collection('investmentPlans').doc(id).delete();
                showSuccess('Plan deleted successfully!');
                loadInvestments();
            } catch (e) {
                showToast('Error: ' + e.message, 'error');
            }
        }

        function resetPlanForm() {
            document.getElementById('plan-edit-id').value = '';
            document.getElementById('plan-name').value = '';
            document.getElementById('plan-return').value = '';
            document.getElementById('plan-duration').value = '';
            document.getElementById('plan-min').value = '';
            document.getElementById('plan-risk').value = 'low';
            document.getElementById('plan-desc').value = '';
            document.getElementById('plan-image-url').value = '';
            document.getElementById('plan-image-preview').style.display = 'none';
            document.getElementById('plan-file-upload').classList.remove('has-file');
            document.getElementById('plan-modal-title').textContent = 'Create Investment Plan';
            document.getElementById('plan-save-btn').textContent = 'Create Plan';
        }

        // ==================== SETTINGS ====================
        async function loadSettings() {
            try {
                const doc = await db.collection('admin').doc('config').get();
                if (doc.exists) {
                    const data = doc.data();
                    document.getElementById('upi-id').value = data.upi || '';
                    document.getElementById('usdt-address').value = data.usdtAddress || '';
                    document.getElementById('min-deposit').value = data.minDeposit || 500;
                    document.getElementById('min-withdrawal').value = data.minWithdrawal || 500;
                }
            } catch (e) {
                console.error('Settings load error:', e);
            }
        }

        async function savePaymentSettings() {
            const upi = document.getElementById('upi-id').value.trim();
            const usdt = document.getElementById('usdt-address').value.trim();
            const minDep = parseFloat(document.getElementById('min-deposit').value) || 500;
            const minWith = parseFloat(document.getElementById('min-withdrawal').value) || 500;
            
            try {
                await db.collection('admin').doc('config').set({
                    upi, usdtAddress: usdt, minDeposit: minDep, minWithdrawal: minWith
                }, { merge: true });
                showSuccess('Settings saved successfully!');
            } catch (e) {
                showToast('Error saving settings: ' + e.message, 'error');
            }
        }

        // ==================== NOTIFICATIONS ====================
        async function sendBroadcast() {
            const title = document.getElementById('notif-title').value.trim();
            const message = document.getElementById('notif-message').value.trim();
            const target = document.getElementById('notif-target').value;
            
            if (!title || !message) {
                showToast('Please fill title and message', 'error');
                return;
            }
            
            try {
                await db.collection('notifications').add({
                    title, message, target,
                    createdAt: new Date(),
                    createdBy: currentUser.uid
                });
                showSuccess('Notification sent successfully!');
                closeModal('broadcast-modal');
                document.getElementById('notif-title').value = '';
                document.getElementById('notif-message').value = '';
            } catch (e) {
                showToast('Error: ' + e.message, 'error');
            }
        }

        // ==================== UTILITY FUNCTIONS ====================
        function openModal(id) {
            document.getElementById(id).style.display = 'flex';
            history.pushState({ modal: id }, '', '#' + id);
        }

        function closeModal(id) {
            document.getElementById(id).style.display = 'none';
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast ' + type;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        function showSuccess(message) {
            document.getElementById('success-message').textContent = message;
            document.getElementById('success-overlay').classList.add('show');
            setTimeout(() => {
                document.getElementById('success-overlay').classList.remove('show');
            }, 2000);
        }

        // ==================== LOGOUT SYSTEM ====================
        function showLogoutConfirm() {
            logoutStep = 1;
            document.getElementById('logout-step').textContent = '1/3';
            document.getElementById('logout-warning').textContent = 'Step 1 of 3: Click Yes to continue';
            document.getElementById('logout-confirm').classList.add('show');
        }

        function cancelLogout() {
            document.getElementById('logout-confirm').classList.remove('show');
            logoutStep = 0;
        }

        function confirmLogout() {
            logoutStep++;
            
            if (logoutStep === 2) {
                document.getElementById('logout-step').textContent = '2/3';
                document.getElementById('logout-warning').textContent = 'Step 2 of 3: Are you really sure?';
            } else if (logoutStep === 3) {
                document.getElementById('logout-step').textContent = '3/3';
                document.getElementById('logout-warning').textContent = 'Final step: Click Yes to logout';
            } else if (logoutStep >= 4) {
                document.getElementById('logout-confirm').classList.remove('show');
                auth.signOut();
            }
        }

        // Close modals on outside click
        window.onclick = function(event) {
            if (event.target.classList.contains('modal-overlay')) {
                event.target.style.display = 'none';
            }
        }

        // Export function placeholder
        function exportUsers() {
            showToast('Export feature coming soon!');
        }

        // Trading config placeholders
        function addTradingPair() {
            showToast('Trading pair management coming soon!');
        }

        function saveFeeConfig() {
            showSuccess('Fee configuration saved!');
        }
    </script>
