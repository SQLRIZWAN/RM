        // ==================== IMAGE UPLOAD SYSTEM ====================
        async function handleImageUpload(input, type) {
            const file = input.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const previewId = type === 'nft' ? 'nft-image-preview' : 'plan-image-preview';
                const uploadId = type === 'nft' ? 'nft-file-upload' : 'plan-file-upload';
                document.getElementById(previewId).src = e.target.result;
                document.getElementById(previewId).style.display = 'block';
                document.getElementById(uploadId).classList.add('has-file');
            };
            reader.readAsDataURL(file);
            
            try {
                showToast('Uploading image...');
                const storageRef = storage.ref(`images/${type}/${Date.now()}_${file.name}`);
                const snapshot = await storageRef.put(file);
                const downloadURL = await snapshot.ref.getDownloadURL();
                
                const urlFieldId = type === 'nft' ? 'nft-image-url' : 'plan-image-url';
                document.getElementById(urlFieldId).value = downloadURL;
                showToast('Image uploaded successfully!');
            } catch (e) {
                showToast('Image upload failed: ' + e.message, 'error');
            }
        }

