    <script>
        // Firebase Config
        const firebaseConfig = {
            apiKey: "AIzaSyDCHUmML-3xe57TJAiZKSTHouFxIiFHGoE",
            authDomain: "etf-rm.firebaseapp.com",
            projectId: "etf-rm",
            storageBucket: "etf-rm.firebasestorage.app",
            messagingSenderId: "1013121735332",
            appId: "1:1013121735332:web:2665a687123c2a95416431"
        };
        
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();
        const storage = firebase.storage();

        // State
        let currentSection = 'dashboard';
        let currentUser = null;
        let usersData = [];
        let nftsData = [];
        let plansData = [];
        let currentEditingUser = null;
        let logoutStep = 0;

        // Check Auth
        auth.onAuthStateChanged(user => {
            if (user) {
                currentUser = user;
                checkAdminAccess(user.uid);
            } else {
                window.location.href = 'login.html';
            }
        });

        async function checkAdminAccess(uid) {
            try {
                const doc = await db.collection('admin').doc('admins').get();
                if (doc.exists && doc.data().uids && doc.data().uids.includes(uid)) {
                    document.getElementById('admin-name').textContent = currentUser.displayName || 'Admin';
                    document.getElementById('admin-avatar').src = currentUser.photoURL || 'https://via.placeholder.com/40';
                    initializeAdmin();
                } else {
                    alert('Access Denied: You are not authorized as admin');
                    auth.signOut();
                }
            } catch (e) {
                console.error('Admin check error:', e);
                showToast('Error checking admin access', 'error');
            }
        }

        function initializeAdmin() {
            loadDashboardStats();
            loadRecentActivity();
            setupRealtimeListeners();
            setupHardwareBackButton();
        }

        // Hardware Back Button Handler
        function setupHardwareBackButton() {
            history.pushState({ page: 'dashboard' }, '', '#dashboard');
            
            window.addEventListener('popstate', function(e) {
                const openModals = document.querySelectorAll('.modal-overlay');
                let modalOpen = false;
                openModals.forEach(modal => {
                    if (modal.style.display === 'flex') {
                        modalOpen = true;
                        modal.style.display = 'none';
                    }
                });
                
                if (document.getElementById('success-overlay').classList.contains('show')) {
                    document.getElementById('success-overlay').classList.remove('show');
                    modalOpen = true;
                }
                
                if (document.getElementById('logout-confirm').classList.contains('show')) {
                    document.getElementById('logout-confirm').classList.remove('show');
                    logoutStep = 0;
                    modalOpen = true;
                }
                
                if (!modalOpen && currentSection !== 'dashboard') {
                    switchSection('dashboard');
                    history.pushState({ page: 'dashboard' }, '', '#dashboard');
                } else if (!modalOpen) {
                    history.pushState({ page: 'dashboard' }, '', '#dashboard');
                } else {
                    history.pushState({ page: currentSection }, '', '#' + currentSection);
                }
            });
        }

        // Sidebar Navigation
        function switchSection(section) {
            if (section !== currentSection) {
                history.pushState({ page: section }, '', '#' + section);
            }
            
            document.querySelectorAll('.section-content').forEach(el => el.classList.add('hidden'));
            document.getElementById(`section-${section}`).classList.remove('hidden');
            
            document.querySelectorAll('.sidebar-item').forEach(el => el.classList.remove('active'));
            const sidebarItems = document.querySelectorAll('.sidebar-item');
            sidebarItems.forEach(item => {
                if (item.getAttribute('onclick') && item.getAttribute('onclick').includes(`'${section}'`)) {
                    item.classList.add('active');
                }
            });
            
            currentSection = section;
            
            if (section === 'users') loadUsers();
            if (section === 'kyc') loadKYC();
            if (section === 'deposits') loadDeposits();
            if (section === 'withdrawals') loadWithdrawals();
            if (section === 'nfts') loadNFTs();
            if (section === 'investments') loadInvestments();
            if (section === 'settings') loadSettings();
            
            if (window.innerWidth <= 1024) {
                toggleSidebar();
            }
        }

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('overlay').classList.toggle('show');
